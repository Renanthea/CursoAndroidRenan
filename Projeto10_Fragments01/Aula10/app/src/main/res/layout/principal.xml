        android:textSize="25sp"/>

    <fragment
        android:id="@+id/principal_f01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="br.com.renan.projeto10_fragments01.F01"
        tools:layout="@layout/f01"/>

    <fragment
        android:id="@+id/principal_f02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="br.com.renan.projeto10_fragments01.F02"
